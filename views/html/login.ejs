<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>登陆页</title>
        <meta name="description" content="">
        <meta name="keywords" content="">
        <link rel="stylesheet" type="text/css" href="/Semantic-UI/semantic.min.css">
        <style type="text/css">
        .field .input{width: 100%;}
        .mb10{margin-bottom: 10px;}

        body div.cards{
            position: absolute;
            top: 50%;
            left: 50%;
        }
        </style>
    </head>
    <body>

            <form action="/login" method="post">
                <div class="ui cards" style="margin: -250px 0 0 -150px;">
                    <div class="card mb5">
                        <div class="image">
                            <img src="/img/matthew.png">
                        </div>
                        <div class="content">
                            <div class="header mb10">Login</div>
                            
                            <div class="field mb10">
                                <div class="ui left icon input">
                                    <i class="user icon"></i>
                                    <input type="text" name="username" placeholder="Username">
                                </div>
                            </div>
                            <div class="field mb10">
                                <div class="ui left icon input">
                                    <i class="lock icon"></i>
                                    <input type="password" name="password" placeholder="Password">
                                </div>
                            </div>
                            
                            <button class="ui fluid large teal submit button">Login</button>
                        </div>
                    </div>
                </div>
            </form>

        <script type="text/javascript" src="/npm/jquery.min.js"></script>
        <script type="text/javascript" src="/Semantic-UI/semantic.min.js"></script>
        <script type="text/javascript">


        var form = $('form');
            
        form.submit(function(){
            $.post('/login', form.serialize(), function(res){
                if(!res.error_code) {
                    window.location.href = '/';
                }
            });
            return false;
        });

        </script>
    </body>
</html>