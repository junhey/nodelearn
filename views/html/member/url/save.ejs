<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<title>分类管理</title>
<meta name="description" content="">
<meta name="keywords" content="">
<link rel="stylesheet" type="text/css" href="/Semantic-UI/semantic.min.css">
</head>
<body>

    <%- include('../head', {}) %>
    
    <div style="padding: 20px;">
        <h1 class="ui header">添加网址</h1>

        <form class="ui form">
            <input type="hidden" name="id" value="<%= locals._id %>">


          <div class="field">
            <label>分类：</label>

            <select name="url_cate">
                <option value="">请选择</option>
                <% cate.forEach(function(item){%>


                    <%= item.id %>
                    <% if(locals.url_cate == item.id ) { %>
                      <option value="<%= item.id %>" selected><%= item.cate_name %></option>
                    <% } else {%>
                      <option value="<%= item.id %>"><%= item.cate_name %></option>
                    <% } %>
                <% })%>
                </select>
          </div>
          <div class="field">
            <label>名称：</label>
            <input type="text" name="url_name" value="<%= locals.url_name %>" />
          </div>
          <div class="field">
            <label>网址：</label>
            <input type="text" name="url_url" value="<%= locals.url_url %>" />
          </div>
          
          <button class="ui button teal" type="submit">提交</button>
        </form>
    </div>



    <script type="text/javascript" src="/npm/jquery.min.js"></script>

        <script type="text/javascript" src="/Semantic-UI/semantic.min.js"></script>
        <script type="text/javascript">


        var form = $('form');
            
        form.submit(function(){
            $.post('/member/url/save', form.serialize(), function(res){
                if(!res.error_code) {
                   window.location.href = '/member/url';
                }
            });
            return false;
        });

        </script>

</body>
</html>